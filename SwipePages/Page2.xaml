<Page x:Class="SwipePages.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SwipePages"
      mc:Ignorable="d" 
      Title="Page2">

    <Grid >
        <StackPanel Orientation="Vertical">
            <Label Height="50" Content="Page 2"/>
            <DataGrid Name="DataGrid1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Model" Width="175" 
                             Binding="{Binding Path=ModelName}"></DataGridTextColumn>
                <DataGridTextColumn Header="Year" 
                             Binding="{Binding Path=Year}"></DataGridTextColumn>
                <DataGridTextColumn Header="Miles" 
                             Binding="{Binding Path=Miles}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        </StackPanel>
    </Grid>
</Page>
